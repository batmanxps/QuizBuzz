<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - QuizBuzz</title>
  <link rel="stylesheet" href="/styles/output.css">
  <style>
    /* Custom styles for admin cards */
    .admin-card {
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .admin-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Main Container -->
  <div class="min-h-screen flex flex-col items-center justify-center p-4">
    <!-- Admin Dashboard Card -->
    <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-4xl">
      <!-- Header -->
      <h2 class="text-2xl font-bold mb-6 text-blue-600 text-center">Admin Dashboard</h2>

      <!-- Add Test Section -->
      <div class="admin-card bg-white p-6 rounded-lg border border-gray-200 mb-6">
        <h3 class="text-xl font-bold mb-4 text-blue-600">Manage Tests</h3>
        <a href="/admin/add-test" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-300 text-center block mb-4">Add New Test</a>
        <button class="w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 transition duration-300" onclick="location.href='/admin/delete-test'">Remove Test</button>
      </div>

      <!-- Manage Users Section -->
      <div class="admin-card bg-white p-6 rounded-lg border border-gray-200 mb-6">
        <h3 class="text-xl font-bold mb-4 text-blue-600">Manage Users</h3>
        <button class="w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 transition duration-300 mb-4" onclick="location.href='/admin/deleteUser'">Delete User</button>
        <!-- <button class="w-full bg-yellow-500 text-white py-2 rounded-lg hover:bg-yellow-600 transition duration-300 mb-4" onclick="location.href='/admin/banUser'">Ban User</button> -->
        <button class="w-full bg-green-500 text-white py-2 rounded-lg hover:bg-green-600 transition duration-300"onclick="location.href='/admin/verifyUser'">Verify User</button>
      </div>

      <!-- Back to Home Button -->
      <a href="/" class="back-button flex items-center justify-center gap-2 text-blue-600 hover:text-blue-800 mt-6">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left-to-line">
          <path d="M3 19V5" />
          <path d="m13 6-6 6 6 6" />
          <path d="M7 12h14" />
        </svg>
        <span>Back to Home</span>
      </a>
    </div>
  </div>
  <script>
    console.log("Developed By Pushkar Ps")
  </script>
</body>
</html>